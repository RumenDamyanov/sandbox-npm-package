{
  "name": "@rumenx/sandbox-npm-package",
  "version": "1.0.2",
  "description": "A demo npm package showcasing TypeScript best practices for development, testing, and publishing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "npm run build:cjs",
    "build:cjs": "tsc -p tsconfig.json",
    "clean": "rm -rf dist coverage",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RumenDamyanov/sandbox-npm-package.git"
  },
  "keywords": [
    "demo",
    "typescript",
    "npm",
    "package",
    "template",
    "best-practices",
    "tutorial",
    "example",
    "boilerplate"
  ],
  "author": "Rumen Damyanov <contact@rumenx.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RumenDamyanov/sandbox-npm-package/issues"
  },
  "homepage": "https://github.com/RumenDamyanov/sandbox-npm-package#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^30.1.3",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  }
}
